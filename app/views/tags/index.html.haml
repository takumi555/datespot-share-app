.response_top_page
  = render 'response/response_top_page'

.container
  .content_right
    = render 'commons/content_right' 

  .content_left
    .font-weight-bold.response_post_index_title.post_index_title
      = "「 #{@tag.tag_name} 」のタグがついた投稿"
    - if @posts.present?
      - @posts.each do |post|
        = render 'commons/posts', post: post
    - else 
      %p.mt-3  投稿がありません

    = paginate @posts
.clear
.response_top_page
  = render 'response/response_tag'