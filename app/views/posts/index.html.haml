.container
  .content_left
    %h4 新着投稿一覧

    - @posts.each do |post|
      = render 'commons/post', post: post


  .content_right
    .new_post_link
      = link_to '新規投稿',new_post_path, class: 'new_post_link_text'
    .area_wrap
      %p エリアから探す
      .area_container
        = link_to '東京', '#'
        = link_to '神奈川', '#'
      .area_container
        = link_to '千葉', '#'
        = link_to '埼玉', '#'
    .tag_wrap
      %p 人気タグ
      %p #記念日　＃カフェ　＃レストラン
      = link_to 'タグ一覧へ', '#'

    %div
      = link_to 'ログアウト', destroy_user_session_path, data: { method: 'delete', confirm: 'ログアウトしますか？' }
    %div
      = link_to '登録内容変更', edit_user_registration_path
    %div
      = link_to 'プロフィールへ', profile_path