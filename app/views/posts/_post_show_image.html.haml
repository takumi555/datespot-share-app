- if @post.images&.attached?
  - if @post.images.size == 3
    .wrapper
      .main
        .main__lists
          %div{class: 'main__lists__image', data: {index:0}, style: "z-index:99;"}
            =image_tag @post.images.first.variant(combine_options:{gravity: :center, resize:"500x300^", crop:"500x300+0+0"}).processed, alt: "画像0", class: 'show_image_main'
          %div{class: 'main__lists__image', data: {index:1}, style: "z-index:-1;"}
            =image_tag @post.images.second.variant(combine_options:{gravity: :center, resize:"500x300^", crop:"500x300+0+0"}).processed, alt: "画像1", class: 'show_image_main'
          %div{class: 'main__lists__image', data: {index:2}, style: "z-index:-1;"}
            =image_tag @post.images.third.variant(combine_options:{gravity: :center, resize:"500x300^", crop:"500x300+0+0"}).processed, alt: "画像2", class: 'show_image_main'
      .thumbs
        .thumbs__lists
          %div{class: 'thumbs__lists__item' , data: {index:0}}
            =image_tag @post.images.first, width: '150', alt: "画像0", class: "thumbs__lists__item__image"
          %div{class: 'thumbs__lists__item' , data: {index:1}}
            =image_tag @post.images.second, width: '150', alt: "画像1", class: "thumbs__lists__item__image"
          %div{class: 'thumbs__lists__item' , data: {index:2}}
            =image_tag @post.images.third, width: '150', alt: "画像2", class: "thumbs__lists__item__image"
  - elsif @post.images.size == 2
    .wrapper
      .main
        .main__lists
          %div{class: 'main__lists__image', data: {index:0}, style: "z-index:99;"}
            =image_tag @post.images.first.variant(combine_options:{gravity: :center, resize:"500x300^", crop:"500x300+0+0"}).processed, alt: "画像0", class: 'show_image_main'
          %div{class: 'main__lists__image', data: {index:1}, style: "z-index:-1;"}
            =image_tag @post.images.second.variant(combine_options:{gravity: :center, resize:"500x300^", crop:"500x300+0+0"}).processed, alt: "画像1", class: 'show_image_main'
      .thumbs
        .thumbs__lists
          %div{class: 'thumbs__lists__item' , data: {index:0}}
            =image_tag @post.images.first, width: '150', alt: "画像0", class: "thumbs__lists__item__image"
          %div{class: 'thumbs__lists__item' , data: {index:1}}
            =image_tag @post.images.second, width: '150', alt: "画像1", class: "thumbs__lists__item__image"
  - else
    = image_tag @post.images.first.variant(combine_options:{gravity: :center, resize:"500x300^", crop:"500x300+0+0"}).processed, class: 'show_image_main image_size_1'
- else 
  = image_tag 'no-image.png', class: 'show_image_main image_size_1  no_image'