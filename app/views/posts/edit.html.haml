.container
  = form_with model: @post do |f|
    %div
      = f.label :title, 'Title'
    %div
      = f.text_field :title, class: 'form'
    %div
      = f.label :image, '画像'
    %div
      = f.file_field :images, multiple: true
    %div 
      = f.label :prefecture, '都道府県'
    %div
      = f.select :prefecture, [['東京都', '東京都'], ['神奈川県','神奈川県'],['千葉県','千葉県'],['埼玉県','埼玉県'],['その他','その他']], include_blank: '選択して下さい'
    %div
      = f.label :area, '場所'
    %div
      = f.text_field :area, class: 'form'
    %div
      = f.label :説明
    %div
      = f.text_area :content, class: 'form'
    %div
      = f.label :url, 'URL'
    %div
      = f.text_field :url, class: 'form'
    %div
      = f.label :tag_name, 'タグ'
    %div
      = f.text_field :tag_name,value: @tag_list, class: 'form', placeholder: 'タグをカンマ区切りで5つまで入力'
    %div
      = f.submit '登録', class: 'mt-3 btn submit_btn'
