.post_container.clear
  .post_container_left
    - if post.images&.attached?
      = image_tag post.images.first.variant(combine_options:{gravity: :center, resize:"250x200^", crop:"250x200+0+0"}).processed, class: 'thumbnail'
  .post_container_right
    .post_title
      = post.title

    %div{:id => "likes_buttons_#{post.id}"}
      = render partial: 'likes/like', locals: { post: post}

    .clear
    .post_prefecture
      = post.prefecture 
    .post_area
      = post.area 
    .post_content.box_read
      = post.content 
    = link_to '詳細', post_path(id: post.id), data: {"turbolinks" => false}, class: 'link_detail'
    
    .user_info
      - if user_signed_in?
        - if post.user.id == current_user.id
          = link_to profile_path do
            = image_tag post.user.avatar_image, class: 'post_user_avatar'
            %p.post_username=  post.user.username
        - else
          = render 'commons/user_info', post: post
      - else 
        = render 'commons/user_info', post: post



